page {
  background-color: #ffffff;
  font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
  font-size: 32rpx;
}

.navigator-hover {
  background: none;
}


page,
.main {
  height: 100%;
}

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
}

.categroy-left .cate-list.on {
  color:#f17d58;
  border-color: #f17d58;
}

.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;

}

.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.cate-box .cate-banner image {
  display: block;
  width: 100%;
  height: 190rpx;
}

.cate-title {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  color: #f17d58;
  font-size: 28rpx;
}

.cate-title::before {
  position: absolute;
  left: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #f17d58;
}

.cate-title::after {
  position: absolute;
  right: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #f17d58;
}

.product-list {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  margin: 0 20rpx 0rpx 0;
  font-size: 24rpx;
}

.product-list image {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.product-list:nth-child(3n) {
  margin-right: 0;
}

.classname{
  display: -webkit-box;
  height: 100rpx;
}